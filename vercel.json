{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "installCommand": "cd frontend && npm install",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "ignore": [
    "src/**",
    "api/**",
    "demos/**",
    "tests/**",
    "data/**",
    "logs/**",
    "screenshots/**",
    "config/**",
    "docs/**",
    ".venv/**",
    "venv/**",
    "*.py",
    "*.md",
    "Dockerfile",
    "requirements*.txt"
  ]
}
